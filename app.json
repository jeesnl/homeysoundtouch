{
    "id": "com.slicinghaunt.bosesoundtouch",
    "sdk": 2,
    "name": {
        "en": "Bose Soundtouch",
        "nl": "Bose Soundtouch"
    },
    "tags": {
        "en": ["Bose", "Soundtouch", "Speaker", "Music"],
        "nl": ["Bose", "Soundtouch", "Luidspreker", "Muziek"]
    },
    "description": {
        "en": "Adds support for Bose Soundtouch devices.",
        "nl": "Voegt ondersteuning toe voor Bose Soundtouch apparaten."
    },
    "images": {
      "large": "/assets/images/large.png",
      "small": "/assets/images/small.png"
    },
    "copyright": "Stefan Simon <stefan@stefansimon.nl>",
    "license": " WTFPL",
    "contributing": {
      "donate": {
        "paypal": {
          "username": "slicinghaunt"
        }
      }
    },
    "category": "music",
    "version": "1.1.0",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Stefan Simon",
        "email": "stefan@stefansimon.nl"
    },
    "flow": {
    "triggers": [
      {
        "id": "started_playing",
        "title": {
          "en": "Started playing",
          "nl": "Begon met spelen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          }
        ]
      },
      {
        "id": "stopped_playing",
        "title": {
          "en": "Stopped playing",
          "nl": "Gestopt met spelen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          }
        ]
      },
      {
        "id": "changed_volume",
        "title": {
          "en": "Changed volume",
          "nl": "Veranderde volume"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          }
        ],
        "tokens": [
          {
            "name": "volume",
            "type": "number",
            "title": {
              "en": "volume",
              "nl": "volume"
            },
            "example": 0.5
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_playing",
        "title": {
          "en": "Is !{{playing|paused}}",
          "nl": "Is nu !{{aan het spelen|gepauzeerd}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          }
        ]
      },
      {
        "id": "is_on",
        "title": {
          "en": "Is !{{on|off}}",
          "nl": "Is !{{aan|uit}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          }
        ]
      },
      {
        "id": "is_in_zone",
        "title": {
          "en": "!{{Is|Isn't}} in a zone",
          "nl": "Is !{{|niet}} in een zone"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          }
        ]
      },
      {
        "id": "is_zone_master",
        "title": {
          "en": "!{{Is|Isn't}} master of a zone",
          "nl": "Is !{{|geen}} meester over een zone"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "play_preset",
        "title": {
          "en": "Play a preset",
          "nl": "Speel een preset"
        },
        "fluidArgs": true,
        "args":[
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "preset_number",
            "type": "dropdown",
            "values": [
              {
                "id": "1",
                "label": {
                  "en": "1"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "2"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "3"
                }
              },
              {
                "id": "4",
                "label": {
                  "en": "4"
                }
              },
              {
                "id": "5",
                "label": {
                  "en": "5"
                }
              },
              {
                "id": "6",
                "label": {
                  "en": "6"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "create_zone_with",
        "title": {
          "en": "Create zone with",
          "nl": "Maak zone met"
        },
        "fluidArgs": true,
        "args":[
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "slave",
            "type": "device",
            "placeholder": {
              "en": "Soundtouch device",
              "nl": "Soundtouch apparaat"
            },
            "filter": "driver_id=soundtouch"
          }
        ]
      },
      {
        "id": "add_slave_to_zone",
        "title": {
          "en": "Add slave to zone",
          "nl": "Voeg slaaf toe aan zone"
        },
        "fluidArgs": true,
        "args":[
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "slave",
            "type": "device",
            "placeholder": {
              "en": "Soundtouch device",
              "nl": "Soundtouch apparaat"
            },
            "filter": "driver_id=soundtouch"
          }
        ]
      },
      {
        "id": "remove_slave_from_zone",
        "title": {
          "en": "Remove slave from zone",
          "nl": "Verwijder slaaf van zone"
        },
        "fluidArgs": true,
        "args":[
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "slave",
            "type": "device",
            "placeholder": {
              "en": "Soundtouch device",
              "nl": "Soundtouch apparaat"
            },
            "filter": "driver_id=soundtouch"
          }
        ]
      },
      {
        "id": "bass_capability",
        "title": {
          "en": "Set bass level",
          "nl": "Zet bass niveau"
        },
        "fluidArgs": true,
        "args":[
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "bass_number",
            "type": "range",
            "min": 0,
            "max": 1,
            "step": 0.01,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "power",
        "title": {
          "en": "Turn",
          "nl": "Zet"
        },
        "fluidArgs": true,
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "power_onoff",
            "type": "dropdown",
            "values": [
              {
                "id": "power_on",
                "label": {
                  "en": "On",
                  "nl": "Aan"
                }
              },
              {
                "id": "power_off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "set_source",
        "title": {
          "en": "Choose source",
          "nl": "Selecteer bron"
        },
        "fluidArgs": true,
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "source",
            "type": "dropdown",
            "values": [
              {
                "id": "aux",
                "label": {
                  "en": "AUX",
                  "nl": "AUX"
                }
              },
              {
                "id": "bluetooth",
                "label": {
                  "en": "Bluetooth",
                  "nl": "Bluetooth"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "shuffle",
        "title": {
          "en": "Shuffle",
          "nl": "Willekeurig"
        },
        "fluidArgs": true,
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "shuffle",
            "type": "dropdown",
            "values": [
              {
                "id": "shuffle_on",
                "label": {
                  "en": "On",
                  "nl": "Aan"
                }
              },
              {
                "id": "shuffle_off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "repeat",
        "title": {
          "en": "Repeat",
          "nl": "Herhaal"
        },
        "fluidArgs": true,
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=soundtouch"
          },
          {
            "name": "repeat",
            "type": "dropdown",
            "values": [
              {
                "id": "repeat_off",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              },
              {
                "id": "repeat_one",
                "label": {
                  "en": "One",
                  "nl": "Een"
                }
              },
              {
                "id": "repeat_all",
                "label": {
                  "en": "All",
                  "nl": "Alles"
                }
              }
            ]
          }
        ]
      }
    ]
    },
    "drivers": [
        {
            "id": "soundtouch",
            "name": {
                "en": "Bose Soundtouch",
                "nl": "Bose Soundtouch"
            },
            "images": {
                "large": "/drivers/soundtouch/assets/images/large.png",
                "small": "/drivers/soundtouch/assets/images/small.png"
            },
            "class": "speaker",
            "capabilities": [
                "speaker_playing",
                "speaker_prev",
                "speaker_next",
                "volume_set",
                "volume_mute"
            ],
            "settings": [
                {
                    "type": "group",
                    "label": {
                        "en": "General settings",
                        "nl": "Instellingen"
                    },
                    "children": [
                        {
                            "id": "ip",
                            "type": "text",
                            "label": {
                                "en": "Ip address",
                                "nl": "Ip adres"
                            },
                            "value": "192.168.1.1",
                            "hint": {
                                "en": "To make sure Homey stays connected, give your Bose Soundtouch devices static Ip addresses.",
                                "nl": "Om er zeker van te zijn dat Homey verbonden blijft, geef het Bose apparaat een statisch Ip adres."
                            }
                        },
                        {
                          "id": "mac",
                          "type": "text",
                          "label": {
                            "en": "Mac address",
                            "nl": "Mac adres"
                          },
                          "value": "",
                          "hint": {
                            "en": "Do not make changes to these settings unless you are absolutely certain you know what you are doing.",
                            "nl": "Wijzig het mac adres niet tenzij je absoluut zeker weet dat je weet wat je aan het doen bent."
                          }
                        }
                    ]
                }
            ],
            "pair": [
                {
                    "id": "start"
                }
            ]
        }
    ]
}